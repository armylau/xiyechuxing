/* pages/attraction-detail/attraction-detail.wxss - 景点详情页样式 */

.page {
  background: var(--bg);
  min-height: 100vh;
}

/* 顶部大图 */
.hero-section {
  height: 560rpx;
  position: relative;
}

.hero-image {
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(0deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.1) 50%);
}

.hero-content {
  position: absolute;
  bottom: 40rpx;
  left: 32rpx;
  right: 32rpx;
  z-index: 1;
}

.hero-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 16rpx rgba(0,0,0,0.3);
}

.hero-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.hero-rating {
  background: rgba(255,255,255,0.2);
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 700;
  color: #fff;
}

.hero-city {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
}

/* 价格栏 */
.price-bar {
  margin: -40rpx 32rpx 24rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  position: relative;
  z-index: 10;
}

.price-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.price-value {
  display: flex;
  align-items: baseline;
}

.price-value.free {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--success);
}

.price-num {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--secondary);
}

.price-unit {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-left: 8rpx;
}

/* 内容卡片 */
.section-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin: 0 32rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.section-content {
  display: block;
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-secondary);
}

/* 图集 */
.gallery {
  white-space: nowrap;
}

.gallery-image {
  display: inline-block;
  width: 400rpx;
  height: 280rpx;
  border-radius: 16rpx;
  margin-right: 16rpx;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--border);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  flex-shrink: 0;
  width: 120rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.info-value.link {
  color: var(--primary);
}

.amap-badge {
  display: inline-block;
  background: linear-gradient(135deg, #3370FF, #59A5FF);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
  font-weight: 600;
}

/* 贴士列表 */
.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}
