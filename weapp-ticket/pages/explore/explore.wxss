/* pages/explore/explore.wxss - 吃住推荐页样式 */

.page {
  min-height: 100vh;
  background: var(--bg);
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #4F6DF5, #7B93FF);
  padding: 40rpx 32rpx 60rpx;
  position: relative;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 0;
  right: 0;
  height: 40rpx;
  background: var(--bg);
  border-radius: 40rpx 40rpx 0 0;
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 控制栏 */
.control-bar {
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.city-picker {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 28rpx;
  background: #fff;
  border-radius: 32rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.city-picker .arrow {
  font-size: 20rpx;
  color: var(--text-secondary);
}

.tab-switch {
  display: flex;
  gap: 12rpx;
}

.tab-item {
  padding: 16rpx 28rpx;
  border-radius: 32rpx;
  border: 2rpx solid var(--border);
  background: #fff;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.tab-item.active {
  border-color: var(--primary);
  background: #EEF2FF;
  color: var(--primary);
  font-weight: 600;
}

/* 内容列表 */
.content-list {
  padding: 0 32rpx;
}

/* 推荐卡片 */
.rec-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.card-header {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.card-icon {
  font-size: 56rpx;
  flex-shrink: 0;
}

.card-info {
  flex: 1;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.card-sub {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.card-sub .stars {
  color: var(--warning);
  letter-spacing: 2rpx;
}

.card-sub .link {
  color: var(--primary);
}

.card-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 2rpx solid var(--border);
}

.rating {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--warning);
}

.price {
  display: flex;
  align-items: baseline;
}

.price-num {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--secondary);
}

.price-unit {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: 4rpx;
}

/* 加载动画 */
.spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--border);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
