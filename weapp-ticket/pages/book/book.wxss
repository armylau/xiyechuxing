/* pages/book/book.wxss - 购票页面样式 */

.page {
  padding: 24rpx;
  padding-bottom: 160rpx;
  background: var(--bg);
  min-height: 100vh;
}

/* 车次信息卡片 */
.train-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.train-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.train-no {
  font-size: 32rpx;
  font-weight: 700;
}

.train-route {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.route-item {
  text-align: center;
  flex: 1;
}

.route-item .time {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text);
}

.route-item .city {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 4rpx;
}

.route-arrow {
  font-size: 36rpx;
  color: var(--primary);
  padding: 0 20rpx;
}

.train-info {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-secondary);
  background: var(--bg);
  padding: 12rpx;
  border-radius: 8rpx;
}

/* 选项卡片 */
.section-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

/* 选项列表 */
.option-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  border: 2rpx solid var(--border);
  background: #fff;
}

.option-item.active {
  border-color: var(--primary);
  background: #EEF2FF;
}

.option-icon {
  font-size: 44rpx;
}

.option-info {
  flex: 1;
}

.option-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.option-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.option-price {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--secondary);
}

/* 表单 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.picker-value {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border);
  border-radius: 16rpx;
  font-size: 30rpx;
  background: #fff;
}

/* 汇总卡片 */
.summary-card {
  margin-bottom: 140rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.points-row {
  color: var(--success);
}

.total-row {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text);
}

.total-price {
  font-size: 44rpx;
  color: var(--secondary);
}

/* 提交栏 */
.submit-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.submit-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.submit-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.submit-price {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--secondary);
}

.submit-btn {
  margin: 0;
  padding: 24rpx 56rpx;
}

/* 按钮加载状态 */
.btn-loading {
  opacity: 0.8;
}

.submit-btn[disabled] {
  background: #ccc !important;
  color: #fff !important;
}
