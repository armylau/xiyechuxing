/* pages/attractions/attractions.wxss - 景点列表页样式 */

.page {
  min-height: 100vh;
  background: var(--bg);
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #4F6DF5, #7B93FF);
  padding: 40rpx 32rpx 60rpx;
  position: relative;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 0;
  right: 0;
  height: 40rpx;
  background: var(--bg);
  border-radius: 40rpx 40rpx 0 0;
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 城市选择栏 */
.city-bar {
  padding: 0 32rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 10;
}

.city-picker {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 28rpx;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.city-picker-text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text);
}

.city-picker-arrow {
  font-size: 20rpx;
  color: var(--text-secondary);
}

/* 景点列表 */
.attraction-list {
  padding: 24rpx;
}

/* 景点卡片 */
.attraction-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.attraction-card:active {
  opacity: 0.95;
}

.card-image {
  height: 360rpx;
  position: relative;
  display: flex;
  align-items: flex-end;
  padding: 32rpx;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(0deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.1) 60%);
}

.attraction-name {
  position: relative;
  z-index: 1;
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
  text-shadow: 0 4rpx 16rpx rgba(0,0,0,0.3);
}

.attraction-rating {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  z-index: 1;
}

.attraction-rating text {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--warning);
}

.card-content {
  padding: 28rpx;
}

.attraction-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ticket-price .free {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--success);
}

.ticket-price .price {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--secondary);
}

.ticket-price .unit {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.view-detail {
  font-size: 26rpx;
  color: var(--primary);
  font-weight: 600;
}

/* 加载动画 */
.spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--border);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
