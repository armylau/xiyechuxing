/* pages/my/my.wxss - 个人中心页样式 */

.page {
  min-height: 100vh;
  background: var(--bg);
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #4F6DF5, #7B93FF);
  padding: 40rpx 32rpx 60rpx;
  position: relative;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 0;
  right: 0;
  height: 40rpx;
  background: var(--bg);
  border-radius: 40rpx 40rpx 0 0;
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* Tab 栏 */
.tab-bar {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 16rpx;
  border: 2rpx solid var(--border);
  background: #fff;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.tab-item.active {
  border-color: var(--primary);
  background: #EEF2FF;
  color: var(--primary);
  font-weight: 600;
}

/* 内容区 */
.tab-content {
  padding: 0 32rpx;
}

/* 查询栏 */
.search-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border);
  border-radius: 16rpx;
  font-size: 28rpx;
  background: #fff;
}

/* 订单卡片 */
.order-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 28rpx;
  background: var(--bg);
  border-bottom: 2rpx solid var(--border);
}

.order-id {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.order-status {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--success);
}

.order-body {
  padding: 28rpx;
}

.order-route {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.order-route .city {
  font-size: 36rpx;
  font-weight: 700;
}

.order-route .arrow {
  font-size: 32rpx;
  color: var(--primary);
}

.order-detail {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.detail-item {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.detail-item .value {
  color: var(--text);
  font-weight: 600;
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 28rpx;
  border-top: 2rpx solid var(--border);
}

.extras {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.total {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.total-num {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--secondary);
}

/* 积分卡片 */
.points-card {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.points-card::before {
  content: '';
  position: absolute;
  top: -40rpx;
  right: -40rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.08);
}

.points-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  position: relative;
}

.level {
  font-size: 28rpx;
  opacity: 0.9;
}

.discount-badge {
  background: rgba(255,255,255,0.2);
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.points-value {
  display: block;
  font-size: 72rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  position: relative;
}

.points-label {
  display: block;
  font-size: 24rpx;
  opacity: 0.75;
  position: relative;
}

/* 等级列表 */
.section-title {
  font-size: 30rpx;
  font-weight: 700;
  margin: 32rpx 0 16rpx;
}

.level-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.level-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.level-item.active {
  border: 4rpx solid var(--primary);
}

.level-icon {
  font-size: 48rpx;
}

.level-info {
  flex: 1;
}

.level-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.level-threshold {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.level-discount {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--secondary);
}

/* 积分历史 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.history-reason {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.history-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.history-points {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--success);
}

/* 安全提示 */
.safety-banner {
  background: linear-gradient(135deg, #FEF3C7, #FDE68A);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
}

.safety-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #92400E;
  margin-bottom: 8rpx;
}

.safety-subtitle {
  font-size: 26rpx;
  color: #92400E;
  opacity: 0.8;
}

.safety-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.safety-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 28rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.safety-icon {
  font-size: 48rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.safety-content {
  flex: 1;
}

.safety-item-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.safety-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}
