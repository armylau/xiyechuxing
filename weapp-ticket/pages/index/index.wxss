/* pages/index/index.wxss - 首页样式 */

.page {
  padding-bottom: 40rpx;
}

/* 头部区域 */
.header {
  background: linear-gradient(135deg, #4F6DF5, #7B93FF);
  padding: 40rpx 32rpx 80rpx;
  position: relative;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 0;
  right: 0;
  height: 40rpx;
  background: var(--bg);
  border-radius: 40rpx 40rpx 0 0;
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 搜索卡片 */
.search-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(79, 109, 245, 0.08);
  padding: 32rpx;
  margin: -40rpx 32rpx 32rpx;
  position: relative;
  z-index: 10;
}

/* 城市选择器 */
.city-selector {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.city-box {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background: var(--bg);
}

.city-label {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.city-name {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text);
}

.swap-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: var(--primary);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.swap-icon {
  font-size: 36rpx;
  color: #fff;
}

/* 表单 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.picker-value {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border);
  border-radius: 16rpx;
  font-size: 30rpx;
  background: #fff;
}

/* 快捷入口 */
.quick-links {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin: 0 32rpx 32rpx;
}

.quick-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(79, 109, 245, 0.08);
}

.quick-link-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.quick-link-text {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text);
}

/* 热门路线 */
.hot-routes {
  margin: 0 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 36rpx;
}

.route-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.route-chip {
  display: inline-block;
  padding: 16rpx 28rpx;
  border-radius: 32rpx;
  background: #EEF2FF;
  color: var(--primary);
  font-size: 26rpx;
  font-weight: 500;
}

.route-chip:active {
  opacity: 0.8;
}
