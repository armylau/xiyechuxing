/* pages/index/index.wxss - 首页样式 */

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 32rpx;
  color: #666;
}

/* 主卡片 */
.main-card {
  text-align: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 计数器卡片 */
.counter-card {
  text-align: center;
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.counter {
  display: block;
  font-size: 96rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin: 30rpx 0;
}

/* 用户卡片 */
.user-card {
  text-align: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-info {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 功能列表 */
.feature-card {
  width: 100%;
}

.feature-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  padding: 20rpx 0;
}

.feature-item .icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.feature-item .text {
  font-size: 24rpx;
  color: #666;
}

/* 底部 */
.footer {
  margin-top: 40rpx;
  text-align: center;
}

.footer text {
  font-size: 24rpx;
  color: #999;
}
