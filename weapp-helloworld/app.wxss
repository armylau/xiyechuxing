/** app.wxss - 全局样式 **/
page {
  --primary-color: #07c160;
  --text-color: #333;
  --bg-color: #f5f5f5;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
  background-color: var(--bg-color);
  color: var(--text-color);
}

.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  border: none;
  margin: 20rpx 0;
}

.btn-primary:active {
  opacity: 0.8;
}
